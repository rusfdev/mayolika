                .row
                  +block2('Marbella Arabesco')(data-src="img/contentImages/tile5.jpg")
                  +block2('Marbella Arabesco')(data-src="img/contentImages/tile5.jpg")
                  +block2('Marbella Arabesco')(data-src="img/contentImages/tile5.jpg")
                  +block2('Marbella Arabesco')(data-src="img/contentImages/tile5.jpg")
                include blocks/interesting-items
          include blocks/footer
