mixin slide(description, title)
  a(href="#").main-slide.slide
    .slide__container
      .block.block_type4.block_size6
        .content.background-box
          .lazy&attributes(attributes)
      .main-slide__description
        span.main-slide__category Коллекция плитки
        span.t-size-36.main-slide__title=title
        .main-slide__text=description
